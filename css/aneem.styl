/* ---- Video slider ---- */


ul, li{
  margin: 0;
  padding: 0;
  border: 0;
  font-size: 100%;
  font: inherit;
  vertical-align: baseline;
}
.opt-video {
  margin:1em 0.5em;
}
.opt-video ul li{
  display: inline-block;
  width: 50%;
}
.opt-video ul li:nth-child(2){
  background: #555354;
  padding:0.6em;
  text-align: center;
}
.opt{
  font-weight: bold;
  padding:0.6em;
  text-align: center;
}
