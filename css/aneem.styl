/* SEARCH BLOCK */
.searchblock input {
  border:none;
  box-shadow: none;
  font-size: 1.4em;
  margin: 0 auto 0 10%;
  width: 30%;
}
.searchblock ::-webkit-input-placeholder {
  color: #555354;
  text-align: center;
}
.searchblock ::-moz-placeholder{
  color: #555354;
  text-align: center;
}
.searchblock :-ms-input-placeholder{
  color: #555354;
  text-align: center;
}
.btmain {
  background:#15a89e;
  margin:0 5px;
  padding: 0.6em 1em;
  text-align: center;
  width: 220px;
}
.cracc:after {
  content: 'Register';
}
/* -------------- MAIN FOOTER ---------------*/
.footgeneral {
  margin:0 0 50px 0;
}
.footleft {
  left: 0;
}
.footslider li:hover {
  opacity: 0.6;
}
.titlethumfoot {
  color: #A5A5A5;
  font-size: 0.8em;
  text-align: center;
}
.thumbstore {
  background: white;
  height: 180px;
}


